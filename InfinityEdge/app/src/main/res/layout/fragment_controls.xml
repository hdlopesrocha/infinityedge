<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="pt.hidrogine.infinityedge.activity.Home">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:padding="20dp"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/aim" />



    </LinearLayout>

<FrameLayout
    android:layout_width="match_parent"
    android:padding="20dp"
    android:layout_height="match_parent">

    <pt.hidrogine.infinityedge.util.VerticalSeekBar
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:id="@+id/accel"
        android:layout_gravity="right|bottom"
        android:indeterminate="false" />

    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:alpha="0.5"
        android:id="@+id/analog"
        android:background="@drawable/dpad"
        android:layout_gravity="bottom|left" />
</FrameLayout>



</FrameLayout>
